    <TextView
        android:id="@+id/tv1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:textSize="15dp"
        android:textColor="#080808"
        android:typeface="serif"

        android:gravity="center"

        />
    <!--This example works only timePickerMode=spinner only, not in clock mode-->
    <TimePicker
        android:id="@+id/tp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_below="@id/tv1"
        android:timePickerMode="spinner"
        />


    <TextView
        android:id="@+id/tv2"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:textColor="#080808"
        android:typeface="serif"

        android:gravity="center"

        />
    <!--This example works only timePickerMode=spinner only, not in clock mode-->
    <TimePicker
        android:id="@+id/tp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:timePickerMode="spinner"
        android:background="#ffffff"

        />


    <TextView
        android:id="@+id/tvdatepicker"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:textColor="#080808"
        android:typeface="serif"

        android:gravity="center"


        />
    <DatePicker
        android:id="@+id/dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:background="#ffffff"
        android:layout_below="@id/tvdatepicker"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speichere Einstellungen"
        android:id="@+id/BpostAndSaveUserSettings"
        android:layout_gravity="center_horizontal"
        android:background="#b3ffff"
        android:onClick="onClickPostAndSaveUserSettings" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suche Vernastaltungen"
        android:id="@+id/BgetRoute"
        android:background="#ffb3d9"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickGetRoute" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zur Angebotsliste"
        android:id="@+id/BgetSharedPrefs"
        android:layout_gravity="right"
        android:background="#d9ffb3"
        android:onClick="onClickGetSharedPrefs" />

    <TextView
        android:id="@+id/tvDisplayAnswer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:textColor="#080808"
        android:typeface="serif"

        android:gravity="center"

        />


</LinearLayout>
</ScrollView>