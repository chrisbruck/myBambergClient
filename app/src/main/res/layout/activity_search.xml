    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gib die Startzeit die Endzeit und den Tag an dem du durch Bamberg gelotst werden willst.!"
        android:id="@+id/TVpickerText"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:backgroundTint="#ffffff" />

    <TextView
        android:id="@+id/tv1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#d35b3a"
        />
    <!--This example works only timePickerMode=spinner only, not in clock mode-->
    <TimePicker
        android:id="@+id/tp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:timePickerMode="spinner"
        />


    <TextView
        android:id="@+id/tv2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#3A69D3"
        />
    <!--This example works only timePickerMode=spinner only, not in clock mode-->
    <TimePicker
        android:id="@+id/tp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:timePickerMode="spinner"

        />


    <TextView
        android:id="@+id/tvdatepicker"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#CF446F"

        />
    <DatePicker
        android:id="@+id/dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_below="@id/tvdatepicker"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post and Save Settings"
        android:id="@+id/BpostAndSaveUserSettings"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickPostAndSaveUserSettings" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET MY ROUTE"
        android:id="@+id/BgetRoute"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickGetRoute" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SharedPref"
        android:id="@+id/BgetSharedPrefs"
        android:layout_gravity="right"
        android:onClick="onClickGetSharedPrefs" />

    <TextView
        android:id="@+id/tvDisplayAnswer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="10dp"
        android:textColor="#CF446F"/>


</LinearLayout>
</ScrollView>