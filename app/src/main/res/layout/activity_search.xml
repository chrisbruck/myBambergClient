<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/introIntro"
        android:typeface="serif"
        android:text="Wähle die Kategorien, die dich interessieren und zu denen du Freizeittipps bekommen möchtest. Anschließend kannst du den Tag und die Uhrzeit auswählen."

        android:textColor="@color/deepgreenblack"
        android:gravity="center_vertical"
        android:textSize="13dp"
        android:layout_gravity="center_horizontal" />



    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <CheckBox android:id="@+id/checkbox_kirche_kloster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/txt_kirche_kloster"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#080808"
            android:padding="18dip"

            android:gravity="center"/>


        <CheckBox android:id="@+id/checkbox_museum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_museum"
            android:checked="false"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#000000"
            android:padding="18dip"
            android:gravity="center"/>
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <CheckBox android:id="@+id/checkbox_musikfest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/txt_musikfest"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#060606"
            android:padding="18dip"

            android:gravity="center"/>


        <CheckBox android:id="@+id/checkbox_straßenfest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/txt_straßenfest"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#000000"
            android:padding="18dip"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <CheckBox android:id="@+id/checkbox_nachtleben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_nachtleben"
            android:checked="false"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#080808"
            android:padding="18dip"

            android:gravity="center"/>


        <CheckBox android:id="@+id/checkbox_theater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="THEATER"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#000000"
            android:padding="18dip"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <CheckBox android:id="@+id/checkbox_kunst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/txt_kunst"

            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#050505"
            android:padding="18dip"

            android:gravity="center"/>


        <CheckBox android:id="@+id/checkbox_univeranstaltung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/txt_univeranstaltung"
            android:layout_weight="1"
            android:background="#fefffd"
            android:textColor="#000000"
            android:padding="18dip"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <CheckBox android:id="@+id/checkbox_informationsvernastaltung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/txt_informationsveranstaltung"

            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#080808"
            android:padding="18dip"

            android:gravity="center"/>


        <CheckBox android:id="@+id/checkbox_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/txt_sport"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#000000"
            android:padding="18dip"
            android:gravity="center"/>
    </TableRow>

