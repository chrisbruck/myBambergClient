<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.StartActivity"
    tools:showIn="@layout/activity_start">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Eine App die dir persoenliche Empfehlungen fure deine Freizeit in Bamberg gibt. Fuelle das Formular aus und du kannst gleich loslegen!"
            android:id="@+id/introText"
            android:layout_gravity="center_horizontal" />


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#d7c438">
        <TableRow>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zum Formular"
                android:id="@+id/Btosearchactivity"
                android:onClick="changingActivity"
                android:layout_centerHorizontal="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zu meiner Liste"
            android:id="@+id/BtoFinalList"
            android:onClick="onClickToFinalList"
            android:layout_gravity="right" />




</TableRow>
       </TableLayout>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:id="@+id/imageView1"
            android:layout_marginTop="25dp"
            android:src="@drawable/bamberg_klein"
            android:layout_gravity="center_horizontal" />




    </LinearLayout>

</RelativeLayout>
